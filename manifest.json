{
  "manifest_version": 2,
  "name": "Sail Boat",
  "description": "Browsing as it should be.",
  "version": "0.0.0.3",
  "browser_action": {
    "default_icon": "images/SailBoat.png",
    "default_title": "Sail Boat"
  },
  "background": {
    "scripts": [
      "lib/jquery-3.2.1.min.js",
      "lib/compromise.js",
      "utils/util.js",
      "utils/web-util.js",
      "init.js",
      "tasks.js",
      "tag.js",
      "contentanalyser.js",
      "webpage.js",
      "contextmenu.js",
      "tabsListener.js",
      "windowListener.js",
      "bookmarksListener.js",
      "notifications.js",
      "tracker.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file:///*"
      ],
      "css": [
        "css/custom.css",
        "contentscripts/dock.css"
      ],
      "js": [
        "lib/jquery-3.2.1.min.js",
        "lib/jquery-ui.min.js",
        "lib/jquery.transit.min.js",
        "lib/compromise.js",
        "utils/util.js",
        "utils/web-util.js",
        "contentscripts/dock.js",
        "contentscripts/timeSpent.js",
        "contentscripts/archiveResults.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "images/left-arrow.svg",
    "images/archive-search.svg",
    "images/plus.svg",
    "images/close.svg",
    "images/plus-filled.svg",
    "images/logo_white_sails_no_text.png",
    "images/trash.svg"
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com 'unsafe-inline' 'unsafe eval' object-src",
  "permissions": [
    "downloads",
    "tabs",
    "storage",
    "notifications",
    "history",
    "bookmarks",
    "unlimitedStorage",
    "contextMenus",
    "cookies",
    "https://*/*",
    "http://*/*",
    "webRequest",
    "contextMenu",
    "alarms"
  ],

  "icons": { "16": "images/Sailboat16.png",
           "48": "images/Sailboat48.png",
          "128": "images/Sailboat128.png" },


  "chrome_url_overrides": {
    "newtab": "html/index.html"
  },
  "commands": {
    "pause-tasks": {
      "suggested-key": {
        "default": "Alt+P",
        "mac": "Option+P"
      },
      "description":"Pause tasks"
    }
  }
}
