{
  "manifest_version": 2,
  "name": "Sail Boat",
  "description": "Browsing as it should be.",
  "version": "0.1",
  "browser_action": {
    "default_icon": "images/SailBoat.png",
    "default_popup": "popup/browserAction.html",
    "default_title": "Sail Boat"
  },
  "background": {
    "scripts": [
      "lib/jquery-3.2.1.min.js",
      "utils/util.js",
      "utils/web-util.js",
      "init.js",
      "tasks.js",
      "webpage.js",
      "contextmenu.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "css": [
        "css/custom.css",
        "contentscripts/dock.css"
      ],
      "js": [
        "lib/jquery-3.2.1.min.js",
        "lib/jquery-ui.min.js",
        "lib/jquery.transit.min.js",
        "utils/util.js",
        "utils/web-util.js",
        "contentscripts/dock.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "images/left-arrow.svg",
    "images/archive-search.svg",
    "images/plus.svg"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe eval' object-src 'self'",
  "permissions": [
    "downloads",
    "tabs",
    "storage",
    "history",
    "bookmarks",
    "unlimitedStorage",
    "contextMenus"
  ],
  "icons": {
    "16": "images/SailBoat.png"
  },
  "chrome_url_overrides": {
    "newtab": "html/index.html"
  },
  "commands": {
    "like-page": {
      "suggested-key": {
        "default": "Ctrl+L",
        "mac": "Command+L"
      },
      "description": "Like page"
    },
    "navigate-open-tasks": {
      "suggested-key": {
        "default": "Alt+Q",
        "mac": "Option+Q"
      },
      "description":"Navigate between open tasks"
    },
    "pause-tasks": {
      "suggested-key": {
        "default": "Alt+P",
        "mac": "Option+P"
      },
      "description":"Pause tasks"
    }
  }
}
